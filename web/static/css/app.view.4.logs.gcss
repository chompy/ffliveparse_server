#view-logs
  overflow-y: scroll
  background-color: #2d2d2d
  .log-container
    background-color: #2d2d2d
    padding: 15px 0px
    .action
      min-height: 32px
      line-height: 12px
      padding: 6px 15px
      &:nth-child(even)
        background-color: #3c3c3c
      .action-time
        display: inline-block
        vertical-align: 10px
        font-size: 14px
        margin-right: 15px
      .action-source
        margin-right: 3px
      .action-combatant, .action-icon
        display: inline-block
        img
          max-width: 32px
      .action-icon
        position: relative
        display: inline-block
        .action-icon-inner
          display: inline-block
          min-width: 32px
          text-align: center
        &::after
          margin-left: 5px
          display: inline-block
          content: "Â»"
          width: 13px
          vertical-align: 10px
      .action-targets
        display: inline-block
        margin-left: 5px
        line-height: 24px
        margin-top: 12px
      &.action-gain-effect .action-icon::before, &.action-lose-effect .action-icon::before
        position: absolute
        display: inline-block
        content: "+"
        line-height: 14px
        top: 0
        font-size: 22px
        left: 0
        text-shadow: 1px 1px 1px #000
      &.action-lose-effect .action-icon::before
        content: "-"
      &.action-death
        background-color: #724444
      .action-damage
        display: inline-block
        line-height: 14px
        vertical-align: 10px
        font-size: 14px
        margin-left: 3px
        margin-right: 8px
        color: #cf8f8f
        min-width: 70px
        &::before
          display: inline-block
          content: "-"
        &.action-damage-heal
          color: #6da16d
          &::before
            display: inline-block
            content: "+"