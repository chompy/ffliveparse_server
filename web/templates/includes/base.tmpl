<!DOCTYPE html>
<html>
    <head>
        <title>{{ .AppName }}{{ template "title" . }}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="shortcut icon" href="/static/img/favicon.ico" />
        <link rel="stylesheet" href="/app.min.css?v={{.VersionString}}" />
    </head>
    <body>
        <div id="errorOverlay" class="hide">
            <div id="errorOverlayMessage" class="textCenter textBold">An error has occured.</div>
        </div>
        <div id="container">
            <div id="head">
                <div class="left-side">
                    {{ template "headerLeft" . }}
                </div>
                <div class="right-side">
                    <span id="appVersion">v{{.VersionString}}</span>
                </div>
                <div class="clear"></div>
            </div>
            <div id="body">
                {{ template "content" . }}
            </div>
        </div>
        <div id="footer">
            &copy; 2018 Nathan Ogden :: <a href="https://na.finalfantasyxiv.com/lodestone/character/1034047/">Minda Silva (Excalibur)</a>
        </div>
        {{ template "scripts" . }}
    </body>
</html>

{{ define "scripts" }}{{ end }}
{{ define "title" }}{{ end }}

