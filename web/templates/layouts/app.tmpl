{{ template "base" .}}

{{ define "title" }} :: {{ .WebIDString }}{{ if .EncounterIDString }} :: Encounter {{ .EncounterIDString }}{{ end }}
{{ end }}

{{ define "headerLeft" }}
<div id="logo"><a href="/">{{.AppName}}</a></div>
<div id="webId"><a href="/{{ .WebIDString }}">{{ .WebIDString }}</a></div>
{{ if .EncounterIDString }}<div id="encounterId">Encounter {{ .EncounterIDString }}</div>{{ end }}
<div id="zone-info">
    <span class="name" id="encounter-name">(Unknown Zone)</span>
    <span class="time" id="encounter-time">00:00</span>
</div>
{{ end }}

