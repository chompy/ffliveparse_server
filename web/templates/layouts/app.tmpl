{{ template "base" .}}

{{ define "title" }} :: {{ .WebIDString }}{{ if .EncounterIDString }} :: Encounter {{ .EncounterIDString }}{{ end }}
{{ end }}

{{ define "headerLeft" }}
<div id="logo"><a href="/">{{.AppName}}</a></div>
<div id="webId"><a href="/{{ .WebIDString }}">{{ .WebIDString }}</a></div>
{{ if .EncounterIDString }}<div id="encounterId">Encounter {{ .EncounterIDString }}</div>{{ end }}
<div id="zone-info">
    <span class="name" id="encounter-name">(Unknown Zone)</span>
    <span class="time" id="encounter-time">00:00</span>
</div>
{{ end }}

{{ define "content" }}
<div id="timeline-mouseover">
    <div class="action-name">Action Name</div>
    <div class="action-desc">....Action description here....</div>
    <div class="action-info">
        <span class="action-time">32.25</span>
        <span class="action-target">Action Target</span>
    </div>
</div>
<div id="loadingMessage">Loading...</div>
<div id="combatants">
    <div class="combatant combatant-info combatant-npc">
        <div class="info-text">
            <span class="name">Non-Player Combatant(s)</span>
        </div>
    </div>
    <div id="playerCombatants">
    </div>
</div>
<div id="timeline" class="dragscroll"></div>
{{ end }}

{{ define "scripts" }}
<script type="text/javascript">
    var WEB_ID = "{{ .WebIDString }}";
    var ENCOUNTER_ID = "{{ .EncounterIDString }}";
    var ENCOUNTER_ID_INT = parseInt(ENCOUNTER_ID, 36);
</script>
<script type="text/javascript" src="/app.min.js?v={{ .VersionString }}"></script>
{{ end }}
